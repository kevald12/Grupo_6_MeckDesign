<!DOCTYPE html>
<html lang="es">
<!-- head -->
<%- include('../partials/head') %>

    <body>
        <!-- header -->
        <%- include('../partials/header')%>
            <!-- <<<< Main >>>> -->

            <main class="main-container">

                <div class="form-login-register">

                    <div class="seccion-account1">
                        <h1 class="title">Have a MeckDesign account?</h1>
                        <p>Access it now to save time when you shop</p>
                        <form class="form-button" action="/user/login" method="post" id="loginForm">
                            
                            <% if (locals.loginError) { %>
                                <div class="text-danger">
                                    <%= locals.loginError %> 
                                </div>
                            <% } %>
                            <% if (locals.errors && errors.email) { %>
                                <div class="text-danger">
                                    <%= errors.email.msg %>
                                </div>
                                <% } %>
                                <span></span>
                                <input type="email" name="email" id="email" placeholder="Email Address"
                                value="<%= locals.oldData ? oldData.email : null %>"
                                class="form-fields<%= locals.errors && errors.email ? '-invalid' : null %>">
                            <br>
                            <% if (locals.errors && errors.password) { %>
                                <div class="text-danger">
                                    <%= errors.password.msg %>
                                </div>
                                <% } %>
                                <span></span>
                                <input type="password" name="password" id="password" placeholder="Password"
                                    value="<%= locals.oldData ? oldData.password : null %>"
                                    class="form-fields<%= locals.errors && errors.password ? '-invalid' : null %>">
                            <br>
                            <div class="terms">
                                <input type="checkbox" name="rememberUser" id="rememberUser"> <label for="rememberUser">Remember User</label>
                        </div>
                            <br>
                            <button class="send" type="submit">Sign In</button>
                        </form>
                        <a class="anchor-links" href="#">Forgot your password?</a>
                    </div>


                    <!-- <div class="seccion-account"> -->
                    <div class="seccion-account2">
                        <h1 class="title">Don't have an account?</h1>
                        <p>Create your own MeckDesign account today. It makes shopping smoother and faster, while also
                            earning you reward points on every purchase.</p>
                        <a href="/user/register"><button class="redirect-btn" type="submit">Create Your
                                Account</button></a>

                        <!-- </div> -->

                    </div>
                </div>



            </main>

            <!-- <<<< footer >>>> -->
            <%- include('../partials/footer') %>
            <script src="/js/login.js"></script>
    </body>

</html>