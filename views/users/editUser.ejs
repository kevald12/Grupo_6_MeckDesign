<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include('../partials/head')%>
<body>
     <!-- header -->
     <%- include('../partials/header')%>
     <!--main  -->
<main>

     <main class="main-container-create">

          <div class="form-group-create">


              <h1 class="title">Edit User <%= user.firstName %> </h1>
              
              <form class="form-button" action="/user/updateUser/<%= user.userId %>?_method=PUT" method="POST" enctype="multipart/form-data" id="userEditForm">
                   <span></span>
                  <input class="form-fields" type="text"  id="firstName" name="firstName" value="<%= user.firstName%>" placeholder="New Name" >
                  <br>
                  <span></span>
                  <input class="form-fields" type="text" id="lastName"  name="lastName" value="<%= user.lastName%>" placeholder="New Last Name">
                  <br>
                  <label for="image">Upload Image</label>
                  <span></span>
                  <input class="form-fields" type="file" name="avatar" placeholder="Upload Image">
                  <br>
               

                  <div><button type="submit" class="send">Edit Changes</button></div>
              </form>

          </div>


      </main>

</main>

     <!-- footer -->
     <%- include('../partials/footer')%>
     <script src="/js/editUser.js"></script>
</body>
</html>
