<!DOCTYPE html>
<html lang="es">
<!-- head -->
<%- include('../partials/head')%>

<body>
    <!-- header -->
    <%- include('../partials/header')%>
    <!-- producto del carrito-->
    <main>

        <div id="cartDiv" class="cart">
            <section id="cart-section" class="cart-page">
                <% if (cart) { %>
                <%for(let i = 0; i < cart.product.length; i++){%>
                <article class="item-cart">
                    <div>
                        <img src="/img/products/<%=cart.product[i].dataValues.image%>" class="image-cart">
                    </div>
                    <div class="product-cart">
                        <div class="product-cart-info">
                            <h2 class="product-title-cart"><%=cart.product[i].dataValues.name%></h2>
                            <p class="price-cart"><%=cart.product[i].dataValues.price%></p>
                            <form action="" method="post">
                                <div>
                                    <label>Qty</label>
                                    <select name="cantidad" id="1" class="quantity-cart">
                                        <% for( let i = 1; i < 11; i++ ) { %>
                                        <option value="i"><%= i %> </option>
                                        <% } %>
                                    </select>
                                </div>
                        </div>
                        <div>
                            <ul class="cart-buttons">
                                <li><a href="#">Delete</a></li>
                                <i class="fas fa-heart"></i>
                            </ul>
                        </div>
                    </div>
                </article>
                <%}} else{%>
                <div id="cart-article"></div>
                <% } %>

            </section>
          
        </div>
        <section id="cost-section" class="carry">
            

        </section>
        <!-- other products -->
        <%- include('../partials/otherProducts')%>
    </main>
    <!-- footer -->
    <%- include('../partials/footer')%>
    <script src="/js/cartScript.js"></script>
</body>

</html>