<!DOCTYPE html>
<html lang="es">
<!-- head -->
<%- include('../partials/head')%>

<body>
    <!-- header -->
    <%- include('../partials/header')%>
    <!-- producto del carrito-->
    <main>
        <div class="cart">
            <section class="cart-page">
                <article class="item-cart">
                    <div>
                        <img src="/img/products/1-1.jpg" width="200" class="image-cart">
                    </div>
                    <div class="product-cart">
                        <div class="product-cart-info">
                            <h2 class="product-title-cart">Product Name</h2>
                            <p class="price-cart">20$</p>
                            <form action="" method="post">
                                <div>
                                    <label>Qty</label>
                                    <select name="cantidad" id="1" class="quantity-cart">
                                        <option value="1" selected>1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                        <option value="8">8</option>
                                        <option value="9">9</option>
                                        <option value="10">10</option>

                                    </select>
                                </div>
                        </div>
                        <div>
                            <ul class="cart-buttons">
                                <li><a href="#">Delete</a></li>
                                <i class="fas fa-heart"></i>
                            </ul>
                        </div>
                    </div>
                </article>


            </section>
        </div>
        <section class="carry">
            <div class="final-price-cart">
                <p class="description-product">Subtotal 40$</p>
                <p class="description-product">Shipping 30$</p>
                <p class="description-product total-cart">Total Cart 70$</p>
                <br>
                <div class="cart-buttons"></div>
                <input type="submit" value="Checkout " class="checkout-button">
            </div>

        </section>
        <!-- other products -->
        <%- include('../partials/otherProducts')%>
    </main>
    <!-- footer -->
    <%- include('./partials/footer')%>
</body>

</html>