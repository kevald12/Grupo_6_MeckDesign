<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include('../partials/head')%>

    <body>
        <!-- header -->
        <%- include('../partials/header')%>
            <!--main  -->
            <main class="main-container-create">

                <div class="form-group-create">


                    <h1 class="title">Create a new product</h1>
                    
                    <form class="form-button" action="/products/list" method="post"  enctype="multipart/form-data">
                        <input class="form-fields" type="text" name="name" placeholder="Product Name" required>
                        <br>
                        <input class="form-fields" type="textarea" name="description" placeholder="Product Description"
                            required>
                        <br>
                        <label for="img">Upload Image</label>
                        <input class="form-fields" type="file" name="img" placeholder="Upload Image" required>
                        <br>
                        <label for="By Room">Select By Room</label>
                        <select class="form-fields" value="By Room" name="By Room" placeholder="Select By Room">
                            <option value="livingRoom">Living Room</option>
                            <option value="diningRoom">Dining Room</option>
                            <option value="kitchen">Kitchen</option>
                        </select>
                        <br>
                        <label for="By Texture">Select By Texture</label>
                        <select class="form-fields" value="By Texture" name="By Texture"
                            placeholder="Select By Texture">
                            <option value="wood">Wood</option>
                            <option value="fabric">Fabric</option>
                            <option value="plastic">Plastic</option>

                        </select>
                        <br>
                        <label for="Color">Select Color</label>
                        <select class="form-fields" value="Color" name="Color"
                            placeholder="Select Color" multiple>
                            <option value="white">White</option>
                            <option value="black">Black</option>
                            <option value="brown">Brown</option>

                        </select>

                        <br>
                        <label for="price">Product Price</label>
                        <input class="form-fields" type="number" name="price" step="any" min="1"
                            placeholder="Insert Only Numbers" required>

                        <button class="send" type="submit">Submit</button>
                    </form>

                </div>


            </main>
            <!-- footer -->
            <%- include('../partials/footer')%>
    </body>

</html>